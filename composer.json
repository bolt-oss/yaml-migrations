{
    "name": "bolt-oss/yaml-migrations",
    "description": "A library to facilitate migrations for YAML configuration files",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bob den Otter",
            "email": "bob@twokings.nl"
        }
    ],
    "require": {
        "bolt-oss/commando": "^0.4 || ^1.0",
        "webimpress/safe-writer": "^2.1",
        "composer/semver": "^3.2",
        "symfony/yaml": "^5.1",
        "symfony/var-dumper": "^5.1",
        "symfony/finder": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "YamlMigrate\\": "src/"
        }
    },
    "replace": {
        "bobdenotter/yaml-migrations": "*"
    },
    "autoload-dev": {
        "psr-4": {
            "YamlMigrate\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^8.3",
        "phpunit/phpunit": "^8.5"
    },
    "bin": [
        "bin/yaml-migrate"
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
